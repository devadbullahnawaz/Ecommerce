<div class='container'>

<div class="text-center"><%= form_tag(root_path, method: :get) do%>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search"), class: "btn"%>
<% end %></div>

<div class='row justify-content-center'>

<%@products.each do |product|%>
  <div class='card m-5' style='width: 20rem;'>
<%= link_to image_tag(product.images[0], style: '  width: 100%;  height: 230px;  object-fit: cover;  object-position: top;'), url_for(product.images[0])%>
    <div style='position: relative;'>
      <h5 class='card-title'><%= product.name %></h5>
      <p class='card-text'><b><%= product.price %></b></p>
      <p class='card-text mb-5'><%= product.description %></p>
      <%= link_to 'Show', product_path(product.id), style: ' bottom: 10px;  position: absolute;' %>
    </div>
</div>
<%end%>
<%= paginate @products%>
</div>
</div>
